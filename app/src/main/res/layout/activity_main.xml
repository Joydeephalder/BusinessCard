<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.businesscard.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/layout2"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:layout_marginLeft="24dp"
        android:text="Joydeep Halder"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/textView2" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/mobile"
        android:layout_below="@id/textView2"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/mobile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mobile"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/mobile"
        android:text="+91 8567895458"
        android:id="@+id/mobileNo"
        android:fontFamily="sans-serif-light"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/email"
        android:layout_below="@id/mobile"
        android:layout_alignLeft="@id/mobile"
        android:id="@+id/email"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="halderjoydeep1997@gmail.com"
        android:layout_alignLeft="@id/mobileNo"
        android:layout_below="@id/mobileNo"
        android:id="@+id/emailNo"
        android:fontFamily="sans-serif-light"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/address"
        android:layout_below="@id/email"
        android:layout_alignLeft="@id/email"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="West Bengal,India,732121"
        android:layout_below="@id/emailNo"
        android:layout_alignLeft="@id/emailNo"
        android:fontFamily="sans-serif-light"/>
</RelativeLayout>
